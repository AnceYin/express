.bg {
  background-color: rgb(241, 241, 241);
  height: 100%;
}

.container {
  border-radius: 13px;
  background-color: blue;
  height: 130rpx;
  color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}

#top {
  padding: 7px;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}

#send {
  margin-left: 9px;
  margin-right: 9px;
  background-color: #00CC33;
}

#get {
  background-color: #0000FF;
}

#identity {
  background-color: #33CCCC;
}

.card {
  border-radius: 10px;
  background-color: white;
  width: 90%;
  height: 100%;
  margin: 0 auto;
}

.pic {
  width: 55px;
  height: 55px;
  border: gray 18px solid;
  border-radius: 5px;
}

.tile {
  display: flex;
  justify-content: start;
  margin-bottom: 10px;
}

.takeCode {
  font-weight: bold;
  font-size: x-large;
}

.phone {
  font-size: smaller;
}

.company {
  color: gray;
  font-size: smaller;
}

.itemList {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  padding-left: 30px;
}

.tile {
  margin-left: 20px;
}

#btns {
  width: 100%;
  position: fixed;
  bottom: 5%;
}

#btnWarpper {
  width: 75%;
  margin: 0 auto;
}