page {
  height: 100%;
  width: 100%;
}

.top {
  width: 100%;
  height: 30%;
  background-color: rgb(6, 165, 231);
  border-bottom-left-radius: 100rpx;
  border-bottom-right-radius: 100rpx;
}

.mid {
  position: fixed;
  top: 25%;
  width: 100%;
  display: flex;
  justify-content: center;
}

.bar {
  display: flex;
  flex-direction: row;
  background-color: white;
  width: 90%;
  justify-content: space-evenly;
  color: rgb(6, 165, 231);
  border-radius: 30rpx;
  border: white solid 1rpx;
  box-shadow: 5rpx 5rpx 2rpx #888888;
}

.divider {
  width: 2rpx;
  height: 100%;
  background-color: grey;
}

.bar .fontAndIcon {
  padding: 30rpx;
}

.bottom {
  position: fixed;
  top: 38%;
  left: 0;
  width: 100%;
}

.item {
  display: flex;
  flex-direction: row;
  height: 120rpx;
  align-items: center;
  padding-left: 30rpx;
}

.icon {
  width: 100rpx;
  height: 100rpx;
  padding: 20rpx;
}

.item-text {
  width: 70%;
  padding-left: 20rpx;
}

.rear-icon {
  color: rgb(6, 165, 231);
}

.head {
  position: fixed;
  top: 5%;
  left: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
  color: white;
  justify-content: space-around;
}

.head-item {
  width: 33%;
}

.items-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.head-img {
  width: 180rpx;
  height: 180rpx;
}

.head-head {
  width: 180rpx;
  height: 180rpx;
  overflow: hidden;
  border-radius: 50%;
}

.setting {
  width: 10%;
  height: 180rpx;
}

.sharePic {
  height: 110rpx;
  width: 110rpx;
}

#shareContainer {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}

.kefuItem {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  align-items: center;
}

.kefuTop {
  padding-top: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.kefubtn {
  padding: 10rpx;
  background-color: rgb(6, 165, 231);
  border-radius: 10rpx;
}

.pad {
  padding-bottom: 15rpx;
}

.tile {
  margin: 0 auto;
  color: aqua;
  width: 80%;
  background-color: whitesmoke;
  height: 60px;
}